<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.edu.icesi.dmi.ecosistemas.listappeco">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SignInActivity" />
        <activity android:name=".activities.SignUpActivity" />
        <activity android:name=".activities.ListSelectionActivity" />
        <activity android:name=".activities.ListDetailActivity" />
        <activity android:name=".activities.ItemDetailActivity" />
        <activity android:name=".activities.CreateItemActivity" />
        <activity android:name=".activities.CreateListActivity" />
        <activity android:name=".activities.EditItemActivity" />
        <activity android:name=".activities.EditListActivity"></activity>
    </application>

</manifest>